<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Term_Project.Pages.MainMenuPage"
             Title="MainMenuPage">
    <ScrollView>
        <VerticalStackLayout>
            <ImageButton
                Source="user_icon_main.png"
                Clicked="userBtnClicked"
                HeightRequest="80"
                WidthRequest="80"
                VerticalOptions="Start"
                HorizontalOptions="End"
                Margin="15,15,15,15"/>
            <Border StrokeShape="RoundRectangle 40,40,40,40" WidthRequest="600" HeightRequest="115" Stroke="Transparent">
                <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" BackgroundColor="#2c9256">
                    <Image Source="running.png" Scale="1.7" VerticalOptions="Center" HorizontalOptions="Start" Margin="15,0,0,0"/>
                    <Button Text=" Add Activity" FontFamily="Segoe-UI" BackgroundColor="Transparent" FontSize="30" Clicked="addActivityBtnClicked" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
                </Grid>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>