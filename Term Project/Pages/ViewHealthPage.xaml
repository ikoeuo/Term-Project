<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Term_Project.Pages.ViewHealthPage"
             Title="ViewHealthPage">
    <ScrollView>
    <VerticalStackLayout
    VerticalOptions="Center"
    HorizontalOptions="Center">
        <Image 
        Source="user_icon.png"
        WidthRequest="300"
        HeightRequest="300"
        Margin="0,0,15,15"/>
        <ListView
                x:Name="HealthListView"
                />
        <Button
            Text="Back"
            FontFamily="SFBold"
            WidthRequest="110"
            HeightRequest="50"
            Margin="15, 15, 5, 15"
            CornerRadius="15"
            Clicked="BackBtnClicked"
            BackgroundColor="#e75151"/>
        <!--goes to MainMenuPag-->
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>